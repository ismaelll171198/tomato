
<div class="estilosapp2">
 
 
 <!-- PARCIAL HEADER --> 
 <%= render "shared/header" %>


<div class="container"> 





<div class="controladorej2">



<div class="row">
  <div class="box">
      <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Mostrar Comentario</div>
       <%= form_for(@comment) do |f| %>
         <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Id:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @comment.id %>">
              </div>
        </div> <!-- end field -->
        <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Comentario:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @comment.comment %>">
              </div>
        </div> <!-- end field -->
         
       <% end %>
      <div class="row">
        <div class="col-lg-12">
          <br/>
       <%= link_to 'Back', comments_path, class:"btn btn-sm btn-success pull-right", style:"margin-right: 15px;" %>
     </div>
      </div> <!-- end field -->
  </div> <!-- end box -->
   
  <div class="margin20">  
    <%= @comment.errors.full_messages.each do |message| %>
        <div class="be-red white top-space text-center">
          * <%= message %>
        </div>
    <% end %>
  </div>

</div> <!-- end row -->
 




<!-- PARCIAL FOOTER --> 
<%= render "shared/footer" %>


</div> <!-- end container -->
  
</div> <!-- end controladorej2 -->

 



  
