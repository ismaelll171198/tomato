<style> 

html,body {background-repeat: no-repeat;
    background-image: linear-gradient(rgb(104, 145, 162), rgb(12, 97, 33));
    width: 100%; height: 100% !important;
}

</style>

<!-- PARCIAL HEADER --> 
<%= render "shared/header" %>

<div class="container">

   
 
<div class="border-form-div">

 <!-- SIGN UP -->

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 
 <%= image_tag("signup.png", :id => "profile-img2", :class => "profile-img-card2") %>
<br></br>

  <div class="field tamany">
    <%= f.email_field :email, placeholder:"Email" %>
  </div>

  <div class="field tamany">
    
    
    <%= f.password_field :password, placeholder:"Password", autocomplete: "off" %></br>
     <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="field tamany">
     
    <%= f.password_field :password_confirmation, placeholder:"Password confirmation", autocomplete: "off" %>
  </div>

  <div class="actions guardar">
    <%= f.submit "Sign up", style:" background-color: blue !important; ",class:"btn btn-lg btn-primary btn-block btn-signin" %>
  </div>
   
<% end %>

<%= render "users/shared/links" %> 
</div>
</div>
