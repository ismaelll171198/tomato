

<%if flash.present?%>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3" style="padding:25px 0">
            <%= render partial: "shared/flash_messages", flash: flash %>
        </div>
    </div>
<%end%>

<div class="controladorej2">

<div class="box">

 


    <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Settings Edit</div> 
    <div class="center-content"> 


<%= form_for(@setting) do |f| %>
<div class="field">
	<%= f.label "Country" %>		
     <%= f.select :country, options_for_country, :prompt => 'Select One', :class => "form-control" %>
</div> 
<div class="field">
	<%= f.label "Language" %>		
    <%= f.text_field :language, placeholder: "Language", class:"form-control size14" %>
</div>  
<div class="field">
    <%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
</div>
<% end %>



    </div>
    <%= link_to 'Back', @setting, class:"btn btn-sm btn-primary", style:"margin-top: 15px;" %> 
  <br></br> 
   
</div> <!-- end box -->


</div>