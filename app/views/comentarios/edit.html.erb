
<div class="estilosapp2">
 
 
 <!-- PARCIAL HEADER --> 
 <%= render "shared/header" %>


<div class="container"> 

 

<div class="controladorej2">
 


<div class="box">
    <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Editar Comentario</div> 

        <%= form_for(@comment) do |f| %>
        <div class="field">
            <%= f.text_field :comment, placeholder: "Comentario", class:"form-control" %>
        </div> 
         
        <div class="field">
            <%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
        </div>
    <% end %>
    <%= link_to 'Listado de Comentarios', @comment, class:"btn btn-sm btn-primary", style:"margin-top: 15px;" %> 
  <br></br> 
  <ol>
    <li>El nombre no puede estar vacio.</li>
    <li>No permite guardar 2 nombres en la BD con el mismo nombre.</li>
    <li>El apellido no puede estar vacio.</li>
    <li>El email no puede estar vacio.</li>
    <li>El email tiene que tener el formato standard con el signo @</li>
  </ol>  
</div> <!-- end box -->

<div class="row">
     <div class="margin20">
        <%= @comment.errors.full_messages.each do |message| %>
            <div class="message be-red white top-space text-center">
                * <%= message %>
            </div>
        <% end %>
    </div>        
</div> <!-- end row -->







<!-- PARCIAL FOOTER --> 
<%= render "shared/footer" %>


</div> <!-- end container -->
  
</div> <!-- end controladorej2 -->

 



  
</div> <!-- end estilosapp2 -->